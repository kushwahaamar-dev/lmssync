# Canvas to Outlook Task Sync - Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ==============================================================================
# Canvas LMS Configuration
# ==============================================================================

# Your Canvas instance URL (e.g., https://canvas.instructure.com)
CANVAS_BASE_URL=https://your-school.instructure.com

# Canvas Personal Access Token
# Generate at: Canvas → Account → Settings → New Access Token
# KEEP THIS SECRET - never share or commit!
CANVAS_ACCESS_TOKEN=your_canvas_token_here

# ==============================================================================
# Microsoft Graph Configuration
# ==============================================================================

# Azure AD Application (client) ID
# Create at: https://portal.azure.com → Azure Active Directory → App registrations
MICROSOFT_CLIENT_ID=your_client_id_here

# Azure AD Tenant ID
# Found in: Azure Portal → Azure Active Directory → Properties → Tenant ID
# Or use "common" for multi-tenant apps, "consumers" for personal accounts
MICROSOFT_TENANT_ID=common

# OAuth redirect URI (must match Azure app registration)
MICROSOFT_REDIRECT_URI=http://localhost:8400

# Token cache file path (for silent auth)
MICROSOFT_TOKEN_CACHE=data/token_cache.json

# ==============================================================================
# Sync Configuration
# ==============================================================================

# Name of the Outlook task list to sync to
SYNC_TASK_LIST_NAME=Canvas Assignments

# Set to "true" to preview changes without applying
SYNC_DRY_RUN=false

# Maximum retry attempts for API calls
SYNC_MAX_RETRIES=3

# Delay between retries (seconds)
SYNC_RETRY_DELAY=1.0

# ==============================================================================
# Storage Configuration
# ==============================================================================

# SQLite database path for sync state
STORAGE_DATABASE_PATH=data/sync_state.db

# ==============================================================================
# Logging
# ==============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
